{
  "image": "mcr.microsoft.com/devcontainers/python:3.13",
  "features": {
    "ghcr.io/eitsupi/devcontainer-features/go-task:latest": {},
    "ghcr.io/astral-sh/uv/install:latest": {}
  },
  "hostRequirements": {
    "cpus": 2,
    "memory": "4gb",
    "storage": "32gb"
  },
  "waitFor": "onCreateCommand",
  "updateContentCommand": "uv sync",
  "postCreateCommand": "",
  "customizations": {
    "codespaces": {
      "openFiles": []
    },
    "vscode": {
      "extensions": [
        "ms-toolsai.jupyter",
        "ms-python.python",
        "GitHub.copilot",
        "donjayamanne.python-environment-manager",
        "charliermarsh.ruff"
      ]
    }
  }
}
